@import 'helpers/mixins'
@import 'helpers/variables'

html
	height 100%
	box-sizing border-box
	--purple #4A1ABB
	--grey #818181
	--dark #1C1E20

body
	min-height 100%
	min-width 320px
	margin 0
	font-family 'Raleway', Arial, sans-serif
	background #FAFAFA

button, input, textarea
	font-family inherit

*, *::before, *::after
	box-sizing inherit

img
	max-width 100%
	height auto

.sprite
	display none

.noScroll
	overflow hidden

.visually-hidden
	position absolute
	width 1px
	height 1px
	margin -1px
	padding 0
	border none
	overflow hidden
	white-space nowrap
	clip rect(0,0,0,0)
	clip-path inset(100%)

.container
	max-width 1170px
	margin 0 auto
	padding 0 16px

.heading-1
	font-weight 700
	font-size 24px
	margin 8px 0 40px
	color var(--dark)

@media (min-width: 1024px)
	.content__container
		display flex

	.content__main
		flex-grow 1

