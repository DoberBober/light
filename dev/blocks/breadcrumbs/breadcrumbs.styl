.breadcrumbs
	margin 32px 0 8px
	padding 0
	list-style none
	display flex
	flex-wrap wrap

.breadcrumbs__item
	a
		font-size 13px
		text-decoration none
		color var(--dark)

		&:hover, &:focus
			text-decoration underline

	&:not(:last-child)
		&::after
			content '/'
			margin 0 4px
			color var(--dark)
			font-size 13px
