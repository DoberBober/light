@media (min-width: 1024px)
	.top
		display grid
		grid-template-columns 300px 1fr
		grid-column-gap 50px
		grid-row-gap 8px
		margin-bottom 48px
		align-items end

	.top__heading
		margin 0 0 5px
		grid-row 2/3
		grid-column 2/3

	.top__breadcrumbs
		margin 0
		grid-row 1/2
		grid-column 2/3

	.top__back
		grid-row 1/3
		grid-column 1/2
		justify-self start
